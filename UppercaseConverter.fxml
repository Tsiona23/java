<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="UppercaseController"
            style="-fx-background-color: #f0f8ff;">
    
    <top>
        <Label text="UPPERCASE TEXT CONVERTER" 
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"
               BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20" bottom="20"/>
            </padding>
        </Label>
    </top>
    
    <center>
        <VBox spacing="15" alignment="CENTER">
            <padding>
                <Insets left="30" right="30"/>
            </padding>
            
            <Label text="Enter your text:" style="-fx-font-size: 14px;"/>
            
            <TextArea fx:id="inputTextArea" 
                     promptText="Type your text here..."
                     prefRowCount="4" 
                     prefColumnCount="30"
                     wrapText="true"/>
            
            <HBox spacing="20" alignment="CENTER">
                <Button text="CONVERT TO UPPERCASE" 
                       fx:id="convertButton"
                       style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"
                       onAction="#convertToUppercase"/>
                
                <Button text="Clear All" 
                       fx:id="clearButton"
                       style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 10 20;"
                       onAction="#clearText"/>
            </HBox>
            
            <Label text="Uppercase Result:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            
            <TextArea fx:id="outputTextArea" 
                     prefRowCount="4" 
                     prefColumnCount="30"
                     wrapText="true"
                     editable="false"
                     style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        </VBox>
    </center>
    
    <bottom>
        <Label text="Click the button to convert text to uppercase!" 
               style="-fx-font-style: italic; -fx-text-fill: #7f8c8d;"
               BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10" bottom="10"/>
            </padding>
        </Label>
    </bottom>
</BorderPane>